{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "dist",
		"sourceRoot": "src",
		"jsx": "react",
		"resolveJsonModule": true,
		"useDefineForClassFields": true
	},
	"exclude": ["native2"],
	"include": ["src"]
}
